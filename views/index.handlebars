<div class="container">
    <div class="container">
        <img id="happyBurger" src="/assets/img/1.png">
        <h1> Eat The Burger! </h1>
    </div>

    <!-- burgers list to be eaten being eaten -->
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <div class="panel-panel default">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        <div class="input-group">
                            <h4> {{this.burger_name}} </h4>
                            <span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit"> Devour It! </button>
								</form>
							</span>
                        </div>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>


        <!-- burgers list already eaten -->
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <div class="panel panel-default">
                    <ul class="list-group">
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <li class="list-group-item">
                            <h4>{{this.burger_name}} </h4>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-md-offset-1">
            <h3> Build your own burger! </h3>

            <!-- section to add burgers -->
            <form class="create-update-form" action="burgers/create" method="POST">

                <div class="form-group">
                    <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
                </div>

                <button class="btn btn-success btn-lg" type="submit">Add Your Own!</button>
            </form>
        </div>
    </div>

